<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/treck"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outdoor Activities"
        android:textStyle="bold"
        android:textColor="#171616"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outdoor activities helps reduce stress "
        android:textStyle="normal"
        android:fontFamily="cursive"
        android:textColor="#171616"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" and prevents some cases of depression"
        android:textStyle="normal"
        android:fontFamily="cursive"
        android:textColor="#171616"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/sign"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:text="WELCOME"
        android:textStyle="italic"
        android:textColor="#fff"
        android:background="@drawable/pinkbtn"></Button>

</LinearLayout>